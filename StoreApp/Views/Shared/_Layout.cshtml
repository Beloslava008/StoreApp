<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <!-- NAVBAR -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-glass shadow-sm">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center gap-2 fw-bold"
                   asp-controller="Home" asp-action="Index">
                    <span class="logo-icon">🛒</span>
                    <span class="logo-text">StoreApp</span>
                </a>

                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU -->
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto gap-2">

                        <li class="nav-item">
                            <a class="nav-link nav-clean"
                               asp-controller="Home" asp-action="Index">
                                Начало
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-clean"
                               asp-controller="Products" asp-action="Index">
                                Продукти
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-lg-3">
                                <a asp-controller="Products"
                                   asp-action="Create"
                                   class="btn btn-add">
                                    ➕ Добави продукт
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- LOGIN / LOGOUT -->
                    <div class="auth-links d-flex align-items-center gap-3">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="container my-5 flex-fill">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="border-top bg-white py-4 mt-auto">
        <div class="container text-center text-muted">
            &copy; 2026 - StoreApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
