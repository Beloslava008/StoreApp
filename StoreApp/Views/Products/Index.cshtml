@model IEnumerable<StoreApp.Models.Product>

@{
    ViewData["Title"] = "Продукти";
}

<h2 class="mb-4 text-center">Продукти</h2>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="search"
               value="@ViewData["Search"]"
               class="form-control"
               placeholder="Търси продукт..." />

        <button class="btn btn-outline-primary" type="submit">
            Търси
        </button>
    </div>

        @if (!string.IsNullOrEmpty(ViewData["Search"]?.ToString()))
    {
        <a asp-controller="Products"
           asp-action="Index"
           class="btn btn-outline-secondary">
            Всички продукти
        </a>
    }
</form>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3">
            <a asp-controller="Products"
               asp-action="Details"
               asp-route-id="@item.Id"
               class="text-decoration-none text-dark">

                <div class="card product-card h-100 shadow-sm clickable-card">

                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl"
                             class="card-img-top product-image"
                             alt="@item.Name" />
                    }
                    else
                    {
                        <img src="/images/no-image.png"
                             class="card-img-top product-image"
                             alt="No image" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>

                        <p class="card-text text-muted small">
                            @item.Description
                        </p>

                        <div class="mt-auto">
                            <p class="fw-bold">@item.Price лв.</p>
                        </div>
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Products"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm">
                            Редакция
                        </a>

                        <a asp-controller="Products"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm">
                            Изтрий
                        </a>
                    }
                </div>
            </a>
        </div>    

    }
</div>
