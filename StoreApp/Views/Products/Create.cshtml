@model StoreApp.Models.Product

@{
    ViewData["Title"] = "Добавяне на продукт";
}

<h2 class="mb-3">Добавяне на продукт</h2>

<hr />

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Име на продукта</label>
                <input asp-for="Name" class="form-control" /> 
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- СНИМКА -->
            <div class="mb-3">
                <label class="form-label">Снимка</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

            <div class="mb-3">
                <input type="submit" value="Запази" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
