@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container mt-5" style="max-width: 420px;">
    <h2 class="text-center mb-4">Вход</h2>

    <form method="post">
        <div class="form-group mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group mb-3">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Парола" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label">Запомни ме</label>
        </div>

        <button type="submit" class="btn btn-success w-100">Вход</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
